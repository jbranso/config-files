  (kbd "co")'backward-kill-word)
;;cut from point to the end of the line
(define-key viper-vi-global-user-map
  (kbd "cu") '(lambda ()
		(interactive)
		(kill-visual-line nil)))
;;cut/kill from point to the beginning of the line
(define-key viper-vi-global-user-map
  (kbd "ca") '(lambda ()
		(interactive)
		(kill-visual-line 0)))
